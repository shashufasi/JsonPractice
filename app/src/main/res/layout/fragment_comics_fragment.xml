<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".comics_fragment"
    android:gravity="center_horizontal"
    android:background="@drawable/avengers_wallpaper"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtComicsSearch"
       android:hint="Enter Comics Name"
        android:textColor="#000"
        android:textStyle="bold"

        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Search Comics"
        android:id="@+id/btnComicsSearch"
        />
<android.support.v7.widget.RecyclerView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/comics_recycler"
    ></android.support.v7.widget.RecyclerView>

    </LinearLayout>